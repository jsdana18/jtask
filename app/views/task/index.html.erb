<section class="py-8 px-8 mr-auto ml-auto">

<%= render "search" %>

<div class="max-w-5xl ml-auto mr-auto">

    <% if @tasks.count <= 0 %>
        <div class="tracking-widest text-purpled-700 py-6 s6 text-center "> <%= t("data_nil") %> </div>
    <% else %>

    <div class="w-full s3 text-gray-700">

        <div class="flex flex-wrap ">
            <div class="w-full text-right mb-8 s2">

                <a href="<%= task_index_path %>" class="py-2 px-3 border mr-3 text-blued-500 border-blued-500 rounded hover:bg-blued-500 hover:text-white"><%= t("order_by_id") %></a>
                <a href="<%= odate_task_index_path %>" class="py-2 px-3 border text-blued-500 border-blued-500 rounded hover:bg-blued-500 hover:text-white"><%= t("order_by_date") %></a>
                <a href="<%= edate_task_index_path %>" class="py-2 px-3 border text-blued-500 border-blued-500 rounded hover:bg-blued-500 hover:text-white"><%= t("order_by_end_date") %></a>
                <a href="<%= edate_task_index_path %>" class="py-2 px-3 border text-blued-500 border-blued-500 rounded hover:bg-blued-500 hover:text-white"><%= t("order_by_priority") %></a>
            </div>

            <%= paginate @tasks %>

            <div class="w-full">

                <% @tasks.each.with_index do | e, index | %>

                <div class="grid grid-cols-10 justify-between s2 sm:pl-2 lg:pl-16 rounded">
                    <div class="col-span-3 cursor-pointer align-bottom tracking-wider break-all text-gray-700 "> 
                        <%= index+1 %> 
                        <a href="<%= task_path(e.id) %>" class="max-w-4xl py-1 px-1 rounded align-bottom hover:text-white hover:bg-blued-550"><%= e.name %></a>
                    </div>
                    
                    <div class="pr-4"><%= t(e.state) %></div>
                    <div class="col-span-2 ml-6 pr-4"><i class="material-icons align-middle pb-1 pr-1">alarm_add</i> <%= e.end_date.strftime("%Y-%m-%d") %> </div>
                    <div class="col-span-2 ml-6 pr-4"><i class="material-icons align-middle pb-1 pr-1">access_time</i> <%= e.created_at.strftime("%Y-%m-%d") %> </div>
                    <div class="text-right"> <a href="<%= edit_task_path(e.id) %>"> <%= t("edit") %> </a> </div>
                    <div class="text-right"> <a href="<%= task_path(e.id) %>" data-method="delete"> <%= t("delete") %> </a> </div>
                </div>

                <% end %>
            </div>

            <%= paginate @tasks %>
            
        </div>
    </div>

    <% end %>

</div>




</section>